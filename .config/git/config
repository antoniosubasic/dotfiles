[user]
	email = antonio.subasic.public@gmail.com
	name = Antonio Subašić
[init]
	defaultBranch = main
[alias]
	cm = commit -m
	cp = "!f() { git clone git@github.com:antoniosubasic/$1.git ${2:-$1}; }; f"
	transpose-ssh = "!f() { \
		git remote set-url origin $(git remote get-url origin | sed 's|https://github.com/|git@github.com:|'); \
	}; f"
	transpose-https = "!f() { \
		git remote set-url origin $(git remote get-url origin | sed 's|git@github.com:|https://github.com/|'); \
	}; f"
	undo = reset --hard HEAD
	acp = "!f() { \
		git add .; \
    	git commit -m \"$1\"; \
		git push; \
	}; f"
	tree = log --graph --oneline --decorate --all
	diff-head = diff HEAD^ HEAD
	url = "!f() { \
		git remote get-url origin | sed 's|git@github.com:|https://github.com/|'; \
	}; f"
[help]
	autocorrect = 30
[url "git@github.com:"]
	insteadOf = "gh:"
[diff]
	algorithm = histogram
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckObjects = true
[status]
	submoduleSummary = true
[core]
	autocrlf = false
	editor = nano
[log]
	date = iso
[pull]
	ff = only
